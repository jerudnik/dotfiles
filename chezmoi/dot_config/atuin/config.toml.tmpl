# Shell history sync and search

# Atuin uses FLAT TOML (no sections)
# All keys at top level

# Sync settings
sync_address = "https://api.atuin.sh"
auto_sync = true
sync_frequency = "5m"

# Search settings
filter_mode = "global"
filter_mode_shell_up_key_binding = "directory"
search_mode = "fuzzy"

# UI settings
style = "compact"
inline_height = 20
show_preview = true

# User info
username = "jrudnik"
email = "john.rudnik@gmail.com"

# Stats
common_prefix = ["sudo", "nix"]

# Sync key file (populated from Bitwarden by chezmoi)
key_path = "~/.config/atuin/key"
