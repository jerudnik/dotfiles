{{- $data := include (joinPath .chezmoi.homeDir ".config/chezmoi/chezmoidata.json") | fromJson -}}
# Ghostty Terminal Configuration
# Managed by chezmoi - theme colors from Stylix

# =========================================
# FONTS
# =========================================
font-family = {{ $data.font.monospace }}
font-size = {{ $data.font.size }}

# =========================================
# COLORS (from Stylix)
# =========================================
background = {{ $data.stylix.base00 }}
foreground = {{ $data.stylix.base05 }}
cursor-color = {{ $data.stylix.base05 }}
cursor-text = {{ $data.stylix.base00 }}
selection-background = {{ $data.stylix.base02 }}
selection-foreground = {{ $data.stylix.base05 }}

# 16-color palette
palette = 0={{ $data.stylix.base00 }}
palette = 1={{ $data.stylix.base08 }}
palette = 2={{ $data.stylix.base0B }}
palette = 3={{ $data.stylix.base0A }}
palette = 4={{ $data.stylix.base0D }}
palette = 5={{ $data.stylix.base0E }}
palette = 6={{ $data.stylix.base0C }}
palette = 7={{ $data.stylix.base05 }}
palette = 8={{ $data.stylix.base03 }}
palette = 9={{ $data.stylix.base08 }}
palette = 10={{ $data.stylix.base0B }}
palette = 11={{ $data.stylix.base0A }}
palette = 12={{ $data.stylix.base0D }}
palette = 13={{ $data.stylix.base0E }}
palette = 14={{ $data.stylix.base0C }}
palette = 15={{ $data.stylix.base07 }}

# =========================================
# WINDOW
# =========================================
window-padding-x = 8
window-padding-y = 8
window-decoration = auto
confirm-close-surface = false

# =========================================
# BEHAVIOR
# =========================================
copy-on-select = clipboard
mouse-hide-while-typing = true
focus-follows-mouse = true

# =========================================
# KEYBINDS
# =========================================
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+shift+enter=new_window
keybind = super+shift+t=new_tab
keybind = super+shift+w=close_surface
keybind = super+physical:one=goto_tab:1
keybind = super+physical:two=goto_tab:2
keybind = super+physical:three=goto_tab:3
keybind = super+physical:four=goto_tab:4
keybind = super+physical:five=goto_tab:5
keybind = super+physical:six=goto_tab:6
keybind = super+physical:seven=goto_tab:7
keybind = super+physical:eight=goto_tab:8
keybind = super+physical:nine=goto_tab:9
keybind = super+ctrl+left=goto_split:left
keybind = super+ctrl+right=goto_split:right
keybind = super+ctrl+up=goto_split:top
keybind = super+ctrl+down=goto_split:bottom

{{ if $data.isDarwin -}}
# =========================================
# macOS SPECIFIC
# =========================================
shell-integration = zsh
shell-integration-features = cursor,sudo,title
macos-option-as-alt = true
{{- end }}

{{ if $data.isLinux -}}
# =========================================
# LINUX SPECIFIC
# =========================================
shell-integration = zsh
gtk-single-instance = true
{{- end }}
